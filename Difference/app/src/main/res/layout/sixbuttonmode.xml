        android:background="@drawable/redbut"
        android:alpha="0"/>

    <Button
        android:id="@+id/difbut5green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/greenbut"
        android:alpha="0"/>
    <Button
        android:id="@+id/difbut5red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/redbut"
        android:alpha="0"/>

    <Button
        android:id="@+id/difbut6green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/greenbut"
        android:alpha="0"/>
    <Button
        android:id="@+id/difbut6red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/redbut"
        android:alpha="0"/>

    <Button
        android:id="@+id/centralbutton"
        android:background="@drawable/center_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:textColor="#DDD5CF"
        android:textSize="30sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/difbut1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="270dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/difference_buttons"
        android:textColor="#DDD5CF"
        android:textSize="18sp"
        android:onClick="diffbut1"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/difbut2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="270dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/difference_buttons"
        android:textColor="#DDD5CF"
        android:textSize="18sp"
        android:onClick="diffbut2"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/difbut3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="165dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/difference_buttons"
        android:textColor="#DDD5CF"
        android:textSize="18sp"
        android:onClick="diffbut3"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/difbut4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="165dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/difference_buttons"
        android:textColor="#DDD5CF"
        android:textSize="18sp"
        android:onClick="diffbut4"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/difbut5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/difference_buttons"
        android:textColor="#DDD5CF"
        android:textSize="18sp"
        android:onClick="diffbut5"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/difbut6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/difference_buttons"
        android:textColor="#DDD5CF"
        android:textSize="18sp"
        android:onClick="diffbut6"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/pointcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#DDD5CF"/>

    <TextView
        android:id="@+id/leveltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointcounter"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="LEVEL "
        android:textColor="#DDD5CF"
        android:background="#0000"
        android:textSize="30sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/enableplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leveltext"
        android:layout_centerHorizontal="true"
        android:textColor="#DDD5CF"
        android:layout_marginTop="10dp"
        android:background="#0000"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/enablehint"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/hinticon"
        android:onClick="enablehint"/>

    <Button
        android:id="@+id/centralstartbutton"
        android:background="@drawable/center_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:textColor="#DDD5CF"
        android:text="START"
        android:onClick="startgame"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/failrow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:text="YOU HAVE FAILED THIS TIME! BETTER LUCK NEXT TIME!"
        android:textColor="#DDD5CF"
        android:background="#0000"
        android:onClick="overtap"
        android:textSize="20sp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/winrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:text="CONGRATULATIONS! YOU HAVE COMPLETED THIS LEVEL!"
        android:textColor="#DDD5CF"
        android:background="#0000"
        android:onClick="overtap"
        android:textSize="20sp"
        android:visibility="invisible"/>

</RelativeLayout>